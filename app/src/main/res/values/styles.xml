<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary" tools:targetApi="lollipop">#181818</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">#181818</item>
    </style>

    <style name="AppTheme.FilterActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="titleTextStyle">@style/LightTitleTextStyle</item>
        <item name="displayOptions">showTitle|homeAsUp</item>
    </style>

    <style name="LightTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GDAppButtonBaseTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">sans</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">+1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="GDRoundedEditTextTheme">
        <item name="android:background">@drawable/editetext_rounded_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="GDroundedRectanglet">
        <item name="android:background">@drawable/edittext_roundedrectangle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="GDroundedRectangletColoured">
        <item name="android:background">@drawable/roundedrectanglecolor</item>
        <item name="android:padding">8dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/checkbox_selector</item>
        <item name="android:drawableLeft">@drawable/checkbox_selector</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="GDSimplerectangle">
        <item name="android:background">@drawable/edittext_simplerectangle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="GDSimplerectangleBlue">
        <item name="android:background">@drawable/edittext_simplerectangle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="GDSimplerectangletouchborder">
        <item name="android:background">@drawable/edittext_simplerectangle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="GDHeadingTheme">
        <item name="android:background">@color/gl_heading_bg_color</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="GDSubHeadingTheme">
        <item name="android:background">@color/gl_sub_heading_bg_color</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GDSpinnerTextViewTheme">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/filter_tv_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Please Select</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawableRight">@drawable/icn_next_arrow</item>
        <item name="android:drawableEnd">@drawable/icn_next_arrow</item>

    </style>


</resources>
