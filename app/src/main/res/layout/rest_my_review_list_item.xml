<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/restaurantDetailsContainer"
        android:background="@color/limed_spruce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/ivRestaurantPicture"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivRestaurantPicture"
            android:layout_toEndOf="@+id/ivRestaurantPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Restaurant Name"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMemberName"/>

            <TextView
                android:padding="3dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:text="9/22/2016"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMyRestReviewDate"/>
            <TextView
                android:padding="3dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:text="4\nLong Beach,California, 90802"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRestPlaceAddress"
                />
        </LinearLayout>

    </RelativeLayout>
    <com.netreadystaging.godine.views.RatingCardView
        android:visibility="gone"
        android:id="@+id/memberRatingCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>