<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      >
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/howitwo"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fram"
        android:background="#000">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/back"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:padding="18dp"
            android:src="@drawable/logo" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imgdine"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/fram"
        android:src="@drawable/how_it_works_image" />

    <ScrollView
        android:layout_marginTop="3dp"
        android:layout_below="@id/imgdine"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/scr"
        android:layout_marginBottom="5dp">
            >

            <TextView
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_it_works"
                android:textSize="15sp"
                android:id="@+id/howitworkstext"/>

    </ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/scr">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It's That Simple."
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/faqButton"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="FAQ"
        style="@style/GDAppButtonBaseTheme"
        />
    <TextView
        android:id="@+id/nothanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Thanks.Let's GoDine!"
        android:textColor="#00f"
        android:layout_gravity="center"/>
</LinearLayout>
</RelativeLayout>
</RelativeLayout>