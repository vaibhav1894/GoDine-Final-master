<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:background="#000"
        android:id="@+id/containerHeadingREstType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView

            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome_godin_text"/>
        <TextView
            android:gravity="center"
            android:id="@+id/lblHeading"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#fff"
            android:padding="10dp"
            android:text="@string/select_rest_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:foregroundGravity="center"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/containerHeadingREstType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvRestTypes"
        />

    <ProgressBar
        android:layout_margin="5dp"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvRestTypes"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar"
        android:visibility="gone" />

</RelativeLayout>
