<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/profile_card_logo"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/Godine"
                android:textSize="25sp"
                android:textStyle="bold"
               android:layout_marginBottom="10dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/feedback"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="35dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/feedback1"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="35dp"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="63dp"
                android:inputType="textMultiLine"
                style="@style/GDSimplerectangle"
                android:gravity="top|left|start"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:focusable="true"
                android:id="@+id/edityourcmments" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/feedback2"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="35dp"
                />
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Very Satisfied"
                android:background="@color/light_grey"
                style="@style/GDRoundedEditTextTheme"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/buttonverysatisfied"

                />
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Satisfied"
                android:background="@color/light_grey"
                style="@style/GDroundedRectanglet"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/buttonsatisfied"
                />
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Neutral"
                android:background="@color/light_grey"
                style="@style/GDroundedRectanglet"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/buttonnetural"
                />
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@color/light_grey"
                android:layout_gravity="center"
                android:text="Dissatisfied"
                style="@style/GDroundedRectanglet"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/buttondissatisfied"/>
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Very Dissatisfied"
                android:background="@color/light_grey"
                style="@style/GDroundedRectanglet"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/buttonverydissatisfied"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/feedback3"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="25dp"
                />
            <EditText
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                style="@style/GDSimplerectangle"
                android:gravity="center_horizontal"
                android:ellipsize="start"
                android:textSize="16sp"
                android:hint="Restaurant Name/City"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:id="@+id/restaurantname1" />
            <EditText
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="center_horizontal"
                style="@style/GDSimplerectangle"
                android:textSize="16sp"
                android:hint="Restaurant Name/City"

                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:id="@+id/restaurantname2" />
            <EditText
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                style="@style/GDSimplerectangle"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:hint="Restaurant Name/City"
                android:layout_marginTop="1dp"
                android:paddingTop="35dp"
                android:layout_gravity="center"
                android:id="@+id/restaurantname3" /> />

            <Button
                style="@style/GDAppButtonBaseTheme"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="SUBMIT"
                android:layout_marginBottom="15dp"
                android:id="@+id/btsubmit"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
