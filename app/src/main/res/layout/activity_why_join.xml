<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.netreadystaging.godine.activities.main.WhyJoinActivity">

<FrameLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/login_top_bg"
        android:padding="15dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_marginTop="105dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/why_join_banner"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="152dp"
        android:textColor="#ffffff"

        android:typeface="sans"
        android:textSize="22sp"
        android:text="@string/why_join_banner_str"
        android:background="#3c000000"

        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/btnBackToMain"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="1dp"
        android:src="@drawable/back"
        android:clickable="true"
        android:onClick="goBackTomain"
        />
</FrameLayout>
<ScrollView
    android:layout_below="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imgViewGoDineBanner"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="155dp"
                android:src="@drawable/go_dine_banner"
                android:layout_marginBottom="15dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/yvideo"
                android:paddingBottom="5dp"/>

        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/meet_go_dine_title"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#aaaaaa"
            android:textSize="15sp"
            android:layout_marginBottom="15dp"
            android:text="@string/meet_go_dine_body"/>

        <Button
            android:id="@+id/btnJoinNow"
            style="@style/GDAppButtonBaseTheme"
            android:text="Join Now"
            />
    </LinearLayout>

</ScrollView>

