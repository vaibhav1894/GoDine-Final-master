<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgLog"
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:src="@drawable/contact_image"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/contact_godine"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="290dp"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:layout_gravity="center"
                android:gravity="top|left|start"
                android:layout_margin="5dp"
                android:hint="Message"
                android:scrollbars="vertical"
                style="@style/GDroundedRectanglet"
                android:id="@+id/editmessage"
                android:layout_weight="1"
                />

            <Button
                style="@style/GDAppButtonBaseTheme"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="Send Message"
                android:id="@+id/sendmessage"
                />
            <TextView
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ's/Customer Support"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="center"
                android:textColor="@color/gl_heading_bg_color"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
