<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:background="#FDFDFE"
        android:id="@+id/welcomeImage"
        android:layout_above="@+id/letGoDine"
        android:layout_below="@+id/welcomePageHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/default_profile_cover"/>

    <TextView
        android:background="#FDFDFE"
        android:id="@+id/letGoDine"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#565656"
        android:textSize="25sp"
        android:typeface="sans"
        android:gravity="center"
        android:text="Let's Go Dine!"/>

    <FrameLayout
        android:id="@+id/welcomePageHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FDFDFE"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <ImageView
            android:background="#FDFDFE"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:src="@drawable/welcome"
            android:id="@+id/imageView" />
        <LinearLayout
            android:layout_margin="50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvWelcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Welcome"
                android:padding="5dp"
                android:textColor="#fff"/>
            <TextView

                android:id="@+id/tvWelcomeUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Atul"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>